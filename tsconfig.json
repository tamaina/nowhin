{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": ["dom", "esnext"],
        "types": ["node"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "built",
        "plugins": [
            {
                "name": "@divyenduz/ts-graphql-plugin"
            }
        ]
    },
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
        "./src/client/**/*.ts"
    ]
}
